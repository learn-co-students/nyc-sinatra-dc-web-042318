<form action="/figures" method="POST">
  <p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

  <br><br/>
  <p>Titles</p>

  <% @title.each do |title| %>
    <input type ="checkbox" name ="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  <% end %>

  <p>Create New Title:<input type="text" name="title[name]" id="new_title"></p>

  <p>Landmarks</p>
 <% @landmark.each do |landmark|%>
   <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
   <%end%>

   <p>Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>
   <p>Year: <input type="text" name="landmark[year_completed]"></p>


  <input type="submit" value="Create New Figure">
</form>
