<form method="POST" action="/figures">
	<p>Name <input type="text" name="figure[name]" id="figure_name"></p>
		<h3>Titles</h3>
		<% @titles.each do |title| %>
			<p><input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%> ><label for="title_<%=title.id%>"><%=title.name%></label></p>
		<% end %>
		<h3>Create a new title</h3>
		<p>Name <input type="text" name="title[name]" id="new_title"> </p>
		<h3>Landmarks</h3>
		<% @landmarks.each do |landmark| %>
			<p><input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>><label for="landmark_<%=landmark.id%>"><%=landmark.name%></label>	</p>
		<% end %>
		<h3>Create a new landmark</h3>
		<p>Name <input type="text" name="landmark[name]" id="new_landmark"> Year <input type="text" name="landmark[year_completed]"> </p>
		<p><input type="submit" value="Create New Figure"></p>
	</select>
</form>